<h2>New Comment</h2>
<%= form_for @comment, remote: true do |f| %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
    <%= f.hidden_field :album_id, value: @album.try(:id)%>
    <%= f.hidden_field :photo_id, value: @photo.try(:id)%>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>